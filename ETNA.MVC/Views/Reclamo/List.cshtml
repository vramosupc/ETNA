@using Microsoft.Ajax.Utilities
@model IEnumerable<ETNA.MVC.Models.PV.ReclamoViewModel>

@{
    ViewBag.Title = "Lista de Reclamos";
    Layout = null;
}
<link rel="stylesheet" href="http://www.w3schools.com/bs/css/bootstrap_w3schools.css" />
@Styles.Render("~/Content/bootstrap/css")

<style type="text/css">
    .centrado {
        text-align: center;
    }
    .izquierda {
        text-align: left;
    }
    .derecha {
        text-align: right;
    }
    a.nounderline:link   
    {   
        text-decoration:none;   
    }     
</style>

<h2>Lista de Reclamos Registrados</h2>


<table class="ui-tabs-selected" style="width:100%">
    <tr>
       
    </tr>
    <tr>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.CodigoReclamo)
        </th>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.FechaHoraReclamo)
        </th>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.Motivo)
        </th>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </th>
        <th class="centrado">
            @Html.DisplayNameFor(model => model.NumeroFactura)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoReclamo)
        </td>
        
        <td>
            @string.Format("{0:dd/MM/yyyy}",Convert.ToDateTime(Html.DisplayFor(modelItem => item.FechaHoraReclamo).ToString()))
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
 
        <td>
            @Html.DisplayFor(modelItem => item.Motivo)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.NombreProducto)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumeroFactura)
        </td>

        <td>
            <a class="idReclamo" onclick="idReclamo(this);" data-id="@item.Id" data-codigoreclamo="@item.CodigoReclamo" data-fechahora="@item.FechaHoraReclamo" data-cliente="@item.NombreCliente">Seleccionar</a>
            &nbsp;&nbsp;/&nbsp;&nbsp;
            <a class="consultarIdReclamo" onclick="consultarIdReclamo(this);" data-id="@item.Id" data-toggle="modal" href="#divDetalleReclamo" data-target=".bs-example-modal-lg">Ver</a>
        </td>
    </tr>
}
    <tr>
        <td colspan="3">Registros: @Model.Count() de @ViewBag.NroRegistros</td>
        <td>Pag. @ViewBag.Page de @ViewBag.TotalPages</td>
        <td colspan="3" class="derecha">
            @for (int i = 1; i <= @ViewBag.TotalPages; i++)
            {
                <a class="paginacion" onclick="paginacion(this);" data-pagina="@i">@i</a>
                @Html.Display(" ")
            }
        </td>
    </tr>
</table>